<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <script
      src="https://code.jquery.com/jquery-3.7.0.js"
      integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <script>
      tailwind.config = { theme: { extend: { colors: { bg: '#3AAFA9', bgLight:
      '#f3f3f7', bgBlue: 'rgb(10, 101, 252)', bgDarkBlue: 'rgb(6, 18, 87)',
      bgWhite: '#F7F7F7', textBlueGray: 'rgb(56, 65, 121)', textWhite:
      '#FEFFFF', textBlack: '#17252A', textGreen: '#2B7A78', textLight:
      '#DEF2F1', fontFamily: 'Alfa Slab One', }, }, }, };
    </script>

    <title>Job Board</title>
  </head>

  <body class="bg-bgLight">
    <header class="flex relative bg-indigo-950 items-center">
      <div class="flex bg-indigo-950 items-center">
        <img
          id="toggle"
          class="flex ms-8 w-14 py-4 hover:cursor-pointer"
          src="/assets/images/hamburger-white.svg"
          alt="nav-toggle"
        />
      </div>
      <a class="ml-auto" href="/">
        <img
          class="w-28"
          src="/assets/images/Noticed_Pin_Red.png"
          alt="brand-logo"
        />
      </a>
      {{#if loggedIn}}
        <a href="/logout" class="ml-auto">
          <img
            class="z-100 w-10 hover:cursor-pointer"
            src="/assets/images/logout.svg"
            alt="create-job-icon"
          />
        </a>
      {{else}}
        <a href="/login" class="ml-auto">
          <img
            class="w-10 hover:cursor-pointer"
            src="/assets/images/login.svg"
            alt="create-job-icon"
          />
        </a>
      {{/if}}
      <a href="/post-job" class="mx-5">
        <img
          class="w-10 hover:cursor-pointer"
          src="/assets/images/plus.svg"
          alt="create-job-icon"
        />
      </a>
      <nav
        id="navbar"
        class="z-50 flex flex-col absolute bg-indigo-950 left-0 right-0 top-20 ps-10 py-10 navbar-show navbar-transition"
      >
        <ul class="flex flex-col justify-end gap-8 p-4 text-2xl text-white">
          <li>
            <a href="/job-board" class="hover:text-bgBlue cursor-pointer">Jobs
              Board</a>
          </li>
          <li>
            <a href="/post-job" class="hover:text-bgBlue cursor-pointer">Post
              Job</a>
          </li>
          {{#if loggedIn}}
            <li>
              <a
                class="hover:text-bgBlue cursor-pointer"
                href="/logout"
              >Logout</a>
            </li>
            <li>
              <a href="/myjobs" class="hover:text-bgBlue cursor-pointer">My Jobs</a>
            </li>
          {{else}}
            <li>
              <a href="/signup" class="hover:text-bgBlue cursor-pointer">Sign Up</a>
            </li>
            <li>
              <a
                href="/login"
                class="hover:text-bgBlue cursor-pointer"
              >Login</a>
            </li>
          {{/if}}
          <li>
            <a
              href="/insurance"
              class="hover:text-bgBlue cursor-pointer"
            >Insurance & Liability</a>
          </li>
          <li>
            <a href="/payments" class="hover:text-bgBlue cursor-pointer">Payment
              Info</a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="grid min-h-screen">
      {{{body}}}
    </main>
    <footer>
      <div class="bg-indigo-950 p-8">
        <div class="flex flex-col text-white items-center gap-3">
          <img
            class="w-28"
            src="/assets/images/Noticed_Logo_Orange.png"
            alt="brand-logo"
          />
          <p class="text-xs">localjobs.pty.ltd 2011-2023@, All Rights Reserved</p>
        </div>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
    <script src="/js/index.js"></script>
  </body>

</html>