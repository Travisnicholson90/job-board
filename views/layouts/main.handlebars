<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/navbar.css">
    <script
      src="https://code.jquery.com/jquery-3.7.0.js"
      integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              bg: '#3AAFA9',
              bgBlue: 'rgb(10, 101, 252)',
              bgDarkBlue: 'rgb(6, 18, 87)',
              bgWhite: '#F7F7F7',
              textBlueGray: 'rgb(56, 65, 121)',
              textWhite: '#FEFFFF',
              textBlack: '#17252A',
              textGreen: '#2B7A78',
              textLight: '#DEF2F1',
              fontFamily: 'Alfa Slab One',
            },
          },
        },
      };
    </script>
    <title>Job Board</title>
  </head>
  <body class="bg-gray-200">
    <header class="flex relative bg-indigo-950 items-center">
      <div class="flex bg-indigo-950 items-center">
        <img
          id="toggle"
          class="flex ms-8 w-14 py-4 hover:cursor-pointer"
          src="/assets/images/hamburger-white.svg"
          alt="nav-toggle"
        />
      </div>
      <img class="w-28 ml-auto" src="/assets/images/Noticed_Pin_Red.png" alt="brand-logo">
        {{#if loggedIn}}
      <a href="/logout" class="ml-auto tooltip">
      <p class="tooltip-text top-16 text-bgBlue font-bold text-lg w-20">Logout</p>
        <img
          class="z-100 w-14 pe-5 hover:cursor-pointer"
          src="/assets/images/logout.svg"
          alt="create-job-icon"
        />
      </a>
       {{else}}
      <a href="/login" class="ml-auto tooltip">
      <p class="tooltip-text top-16 text-bgBlue font-bold text-lg w-20">Login</p>
        <img
          class="z-100 w-14 pe-5 hover:cursor-pointer"
          src="/assets/images/login.svg"
          alt="create-job-icon"
        />
      </a>
      {{/if}}
      <a href="/post-job" class="relative tooltip">
      <p class="tooltip-text top-16 text-bgBlue font-bold text-lg w-20">Post Job</p>
        <img
          class="z-100 w-16 pe-5 hover:cursor-pointer"
          src="/assets/images/plus.svg"
          alt="create-job-icon"
        />
      </a>
         {{!-- <nav id="navbar" class="z-50 flex absolute top-20 right-0 p-2 flex-col bg-indigo-950 navbar-show"></nav> --}}
      <nav
        id="navbar"
        class="z-50 flex flex-col absolute bg-indigo-950 left-0 right-0 top-20 ps-10 py-10 navbar-show navbar-transition"
        {{!-- class="z-50 flex absolute top-20 right-0 p-2 flex-col bg-indigo-950 navbar-hidden navbar-transition navbar-show lg:top-0 left-0 right-0" --}}
      >
        <ul class="flex flex-col justify-end gap-8 p-4 text-2xl text-white">
          <li>
            <a href="/job-board" class="hover:text-bgBlue cursor-pointer">Jobs Board</a>
          </li>
          <li>
            <a href="/post-job" class="hover:text-bgBlue cursor-pointer">Post Job</a>
          </li>
          <li>
            <a href="/categories" class="hover:text-bgBlue cursor-pointer">Job Categories</a>
          </li>
          {{#if loggedIn}}
           <li>
               <a class="hover:text-bgBlue cursor-pointer" href="/logout">Logout</a>
          </li> 
          {{else}}
          <li>
            <a href="/signup" class="hover:text-bgBlue cursor-pointer">Sign Up</a>
          </li>
          <li>
            <a href="/login" class="hover:text-bgBlue cursor-pointer">Login</a>
          </li>
          {{/if}}
          <li>
            <a href="/insurance" class="hover:text-bgBlue cursor-pointer">Insurance & Liability</a>
          </li>
          <li>
            <a href="/payments" class="hover:text-bgBlue cursor-pointer">Payment Info</a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="grid min-h-screen">
      {{{body}}}
    </main>
      <footer>
        <div class="bg-indigo-950 p-8">
            <div class=" flex flex-col text-white items-center gap-3">
                      <img class="w-28" src="/assets/images/Noticed_Pin_Red.png" alt="brand-logo">
                <p class="text-xs">localjobs.pty.ltd 2011-2023@, All Rights Reserved</p>
            </div>
        </div>
    </footer>
    <script src="/js/index.js"></script>
  </body>
</html>