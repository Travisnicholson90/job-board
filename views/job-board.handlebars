<section class="grid items-center justify-center">
<h1 class="text-4xl font-bold text-indigo-950 my-3">Jobs Board</h1>
{{#each jobs as |job|}}
    <div class="relative grid-cols-1 py-10">
        <div>

        
<span class="absolute hidden">
    {{job.id}}
</span>

<h2 class="text-textBlack text-3xl py-1">
    {{job.job_name}}
</h2>
<p class="text-textBlack text-xl py-1"> 
    {{job.job_description}}
</p>
<p class="text-textBlack text-l py-1">
    {{job.job_suburb}}
</p>
<div class="grid grid-cols-2">
    <p> {{job.job_date}} </p>
    <p> {{job.job_time}} </p>
</div>
<div class="grid grid-cols-2">
    <p> {{job.job_duration}} hours </p>
    <p class="relative flex text-xl font-bold justify-self-start">$ {{job.job_price}} </p>
</div>
<br>
<h2 class="font-bold">
    Posted By: {{job.user.first_name}}
</h2>

{{!-- <p> Posted {{job.job_duration}} hours ago </p> --}}
    </div>
    </div>
{{/each}}
</section>